<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="5.0sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/section1_device_info_textView"
            android:layout_marginTop="10.0sp"
            style="@style/SubHeadingStyle"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />
        
    <View android:id="@+id/section1_blank_view"
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            style="@style/HorizontalLineStyle" />
    
    <TextView android:id="@+id/section1_scan_textView"
            android:layout_marginTop="10.0sp"
            android:gravity="center"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Scanning..." />
        
    <ListView android:id="@+id/section1_device_list_view"
        android:layout_marginTop="10.0sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>
    
    
</LinearLayout>
