<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin" 
        android:paddingTop="@dimen/activity_vertical_margin" 
        android:paddingRight="@dimen/activity_horizontal_margin" 
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView android:id="@+id/adv_type"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="30dip"
            android:text="Adv_Type"
            style="@style/SubHeadingStyle" />
        <View android:id="@+id/blank_view"
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            style="@style/HorizontalLineStyle" />

        <TextView android:id="@+id/manufacturerId_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Manufacturer ID(sould be used together with Mnufacturer Data), Enter HEX Value eg.75" />
        <EditText android:id="@+id/manufacturerId_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/manufacturerData_textView" 
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Manufacturing Data(should be ued together with mnufacturer id), Enter HEX Value eg.75" />
        <EditText android:id="@+id/manufacturerData_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />
        
        <TextView android:id="@+id/service_uuid_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Service uuid 16/32/128" />
        <EditText android:id="@+id/service_uuid_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />
        
        <TextView android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Service data(should be used together with Service data uuid)" 
            style="@style/SubHeadingStyle" />
        <View android:id="@+id/blank_view2" 
            android:layout_width="match_parent" 
            android:layout_height="2.0dip" 
            style="@style/HorizontalLineStyle" />
        
        <TextView android:id="@+id/service_data_uuid_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="(only 16bit)Service data uuid(should be used together with Service data)" />
        <EditText android:id="@+id/service_data_uuid_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/service_data_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Service data(should be used together with Service data uuid), Enter HEX Value eg.75" />
        <EditText android:id="@+id/service_data_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/include_name_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Inlcude name" />
        <Spinner android:id="@+id/include_name_spinner" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/is_connectable_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="isConnectable" />
        <Spinner android:id="@+id/is_connectable_spinner" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:gravity="center"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Scan response data" 
            style="@style/SubHeadingStyle" />
        <View android:id="@+id/blank_view3" 
            android:layout_width="match_parent" 
            android:layout_height="2.0dip" 
            style="@style/HorizontalLineStyle" />

        <TextView android:id="@+id/resp_manufacturerId_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Manufacturer ID(sould be used together with Mnufacturer Data), Enter HEX Value eg.75" />
        <EditText android:id="@+id/resp_manufacturerId_editText" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/resp_manufacturerData_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Manufacturing Data(should be ued together with manufacturer id), Enter HEX Value eg.75" />
        <EditText android:id="@+id/resp_manufacturerData_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/resp_service_uuid_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service uuid 16/32/128" />
        <EditText android:id="@+id/resp_service_uuid_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:gravity="center"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Service data(should be used together with Service data uuid)" 
            style="@style/SubHeadingStyle" />
        <View android:id="@+id/blank_view4" 
            android:layout_width="match_parent" 
            android:layout_height="2.0dip" 
            style="@style/HorizontalLineStyle" />

        <TextView android:id="@+id/resp_service_data_uuid_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="(only 16bit)Service data uuid(should be used together with Service data)" />
        <EditText android:id="@+id/resp_service_data_uuid_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/resp_service_data_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Service data(should be used together with Service data uuid), Enter HEX Value eg.75" />
        <EditText android:id="@+id/resp_service_data_editText" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/resp_include_name_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:text="Inlcude name" />
        <Spinner android:id="@+id/resp_include_name_spinner" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/resp_tx_power_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tx Power" />
        <Spinner android:id="@+id/resp_tx_power_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/adv_power_type_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adv Power Type" />
        <Spinner android:id="@+id/adv_power_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView android:id="@+id/timeout_textView"
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time out Value( 0 ~ 18000 ms)" />
        <EditText android:id="@+id/timeout_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <TextView android:textSize="20.0sp"
            android:textStyle="bold" 
            android:id="@+id/text_adv_result" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip" 
            android:text="Multi Adv Result"  />
        <View android:id="@+id/blank_view5" 
            android:layout_width="fill_parent" 
            android:layout_height="2.0dip" 
            style="@style/HorizontalLineStyle" />
        <TextView android:textSize="14.0sp" 
            android:id="@+id/adv_result_textView" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="10.0dip" 
            android:hint="success/fail" />

    </LinearLayout>
</ScrollView>

    
    
    

