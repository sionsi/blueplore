<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section5_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView android:id="@+id/section5_connection_status" 
        	android:text="connection status : disconnected"
            android:gravity="center"
            android:layout_marginTop="10.0sp"
            style="@style/SubHeadingStyle"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />
    
    <View android:id="@+id/section5_blank_view"
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            style="@style/HorizontalLineStyle" />

    <TextView android:id="@+id/section5_current_phy" 
        	android:text="tx phy :1M, rx phy: 1M"
            android:gravity="center"
            android:layout_marginTop="10.0sp"
            style="@style/SubHeadingStyle"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

    <ListView android:id="@+id/section5_device_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
