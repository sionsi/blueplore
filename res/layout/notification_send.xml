<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notification_send_scrollView"
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin" 
        android:paddingTop="@dimen/activity_vertical_margin" 
        android:paddingRight="@dimen/activity_horizontal_margin" 
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        
        <TextView android:id="@+id/notification_send_device_info_textView"
            android:layout_marginTop="10.0sp"
            style="@style/SubHeadingStyle"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />
        
        <View android:id="@+id/notification_send_blank_view"
            android:layout_width="match_parent"
            android:layout_height="2.0dip"
            style="@style/HorizontalLineStyle" />
        

        
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10.0sp"
		    android:orientation="horizontal">

		    <Button android:id="@+id/notification_send_set_pkt_len_button"
                style="@style/ButtonStyle1"
                android:layout_marginRight="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"     
                android:text="Set Pkt Len"/>
		    　　 
		    <Button android:id="@+id/notification_send_show_snd_pkt_button"
		        style="@style/ButtonStyle1"
		        android:layout_marginRight="1.0dip"
                android:layout_marginLeft="1.0dip"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.0"     
		        android:text="Show Pkt"/>
		    
		    <Button android:id="@+id/notification_send_send_pkt_button"
		        style="@style/ButtonStyle1"
		        android:layout_marginRight="1.0dip"
                android:layout_marginLeft="1.0dip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"     
                android:text="Send Pkt"/>

		</LinearLayout>

        <TextView android:id="@+id/notification_send_pkt_textView" 
            android:layout_marginTop="10.0sp"
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>



